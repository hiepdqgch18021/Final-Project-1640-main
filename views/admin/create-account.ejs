<%- include('../_layout/header') %> 
<h2 class="page-title" >Create Account</h2>
<a href="/admin/accounts" class="edit"><i class="bi bi-arrow-return-left"></i> Back to all accounts</a>
<br><br>

<form action="/admin/create_account" method="post">
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" name="email" id="" value=" " class="form-control" placeholder="Enter email" required="true" >
    </div>
    <div class="form-group">
        <label for="">Role</label>
        <select name="role" id="" class="form-control">
            <option value="admin">Admin</option>
            <option value="staff">Staff</option>
            <option value="qam">QAM</option>
            <option value="qac">QAC</option>
        </select>
    </div>
    <div class="form-group">
        <label for="">Department</label>
        <select name="department" id="" class="form-control">
             <% if(departments != ''){%> <% departments.forEach(function(department, index){ %>
                <option value="<%= department.department_name %> "><%= department.department_name %> </option>
              <% }) %> 
        <% } %>
        </select>
    </div>
    <div class="form-group">
        <label for="">Password</label>
        <input type="password" name="password" id="" class="form-control" required="true">
    </div>
    <div class="form-group">
        <label for="">Confirmed Password</label>
        <input type="password" name="confirmedPassword" id="" class="form-control" required="true">
    </div>
    <button class="btn btn-primary">Save</button>
</form>
<%- include('../_layout/footer')  %> 
