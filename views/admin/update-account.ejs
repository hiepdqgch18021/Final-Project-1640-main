<%- include('../_layout/header') %> 

<h2 class="page-title" >Update Account</h2>
<a href="/admin/accounts" class="btn btn-primary">Back to all accounts</a>
<br><br>

<form action="/admin/edit_account/<%= user._id %> " method="post">
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" name="email" id="" value="<%= user.email %> " class="form-control" placeholder="Enter email" required="true" >
    </div>
    <div class="form-group">
        <label for="">Role</label>
        <select name="role" id="" class="form-control ">
            <option value="admin">Admin</option>
            <option value="staff">Staff</option>
            <option value="qam">QAM</option>
            <option value="qac">QAC</option>
        </select>
    </div>
    <div class="form-group">
        <label for="">Department</label>
        <select name="department" id="" class="form-control">
             <% if(departments != ''){%> <% departments.forEach(function(department, index){ %>
                <option value="<%= department.department_name %> "><%= department.department_name %> </option>
              <% }) %> 
        <% } %>
        </select>
    </div>
    <button class="btn btn-default">Submit</button>
</form>
<%- include('../_layout/footer')  %> 
