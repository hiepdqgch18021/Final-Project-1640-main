<%- include('../_layout/header') %> 
    
    <div class="container">
        <div class="content-submit col-10">
            <h1>Create new category</h1>
       
            <form action="/qam/create_category" method="post"> 
                <div class="form-group">
                    <input
                placeholder="Category Name"
                type="text"
                class="form-control"
                id="name"
                name="name"
                maxlength="15"
                minlength="5"
                    />
                    </div>

                <div class="text-center">
                <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
    <div class="pt-5">
        <div class="table-area">
            <table class="table table-striped table-hover">
                <tbody class="thead-dark text-center">
                
                <tr class="thead-dark text-center">
                    <th>ID</th>
                    <th>Category</th>
                    <th>Number of topics</th>
                    <th>Action</th>
                </tr>
                <% if(categories != ''){%> <% categories.forEach(function(category, index){ %>

                <tr class="text-center">
                    <td><%- index %></td>
                    <form action="/qam/edit_category/<%= category._id %> " method="post">
                    <td><input type="text" name="name" id="" value="<%- category.category %>"  maxlength="15"
                minlength="5"></td>
                    <td><%- category.campaign.length %> </td>
                    <td>
                    <button class="btn btn-primary"><i class="bi bi-pencil-square"></i></button>
                    </form>
                    <a href="/qam/delete_category/<%- category._id %>" class="btn btn-danger" onclick=""><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
                        <% }) %> 
                <% } %>
                </tbody>
            </table>
        </div>
    </div>

<%- include('../_layout/footer')  %> 
